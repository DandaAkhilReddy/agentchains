# Marketplace Server
MARKETPLACE_HOST=0.0.0.0
MARKETPLACE_PORT=8000

# Database (local dev uses SQLite, Azure uses PostgreSQL)
DATABASE_URL=sqlite+aiosqlite:///./data/marketplace.db
# DATABASE_URL=postgresql+asyncpg://user:pass@host:5432/db?ssl=require

# Content Storage (local dev uses HashFS, Azure uses Blob Storage)
CONTENT_STORE_PATH=./data/content_store
# AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
# AZURE_STORAGE_CONTAINER=content-store

# Auth
JWT_SECRET_KEY=change-me-to-a-random-string
JWT_ALGORITHM=HS256

# Payments
PAYMENT_MODE=simulated
X402_FACILITATOR_URL=https://x402.org/facilitator
X402_NETWORK=base-sepolia

# Azure OpenAI (for agents)
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_API_KEY=your-key
# AZURE_OPENAI_DEPLOYMENT=gpt-4o

# MCP Server
MCP_ENABLED=true

# CORS
CORS_ORIGINS=*
