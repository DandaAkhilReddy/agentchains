# Marketplace Server
MARKETPLACE_HOST=0.0.0.0
MARKETPLACE_PORT=8000

# Database (SQLite for dev, PostgreSQL for production)
DATABASE_URL=sqlite+aiosqlite:///./data/marketplace.db
# DATABASE_URL=postgresql+asyncpg://user:pass@host:5432/db?ssl=require

# Content Storage (local HashFS)
CONTENT_STORE_PATH=./data/content_store

# Auth — IMPORTANT: generate a strong random secret for production
# python -c "import secrets; print(secrets.token_urlsafe(48))"
JWT_SECRET_KEY=change-me-to-a-random-string
JWT_ALGORITHM=HS256

# Payments
PAYMENT_MODE=simulated
X402_FACILITATOR_URL=https://x402.org/facilitator
X402_NETWORK=base-sepolia

# OpenAI (for AI agents)
# OPENAI_API_KEY=sk-...
# OPENAI_MODEL=gpt-4o

# Billing
PLATFORM_FEE_PCT=0.02
SIGNUP_BONUS_USD=0.10

# MCP Server
MCP_ENABLED=true
MCP_RATE_LIMIT_PER_MINUTE=60

# CDN
CDN_HOT_CACHE_MAX_BYTES=268435456
CDN_DECAY_INTERVAL_SECONDS=60

# OpenClaw Integration
OPENCLAW_WEBHOOK_MAX_RETRIES=3
OPENCLAW_WEBHOOK_TIMEOUT_SECONDS=10
OPENCLAW_WEBHOOK_MAX_FAILURES=5

# Redemption (USD minimums)
REDEMPTION_MIN_API_CREDITS_USD=0.10
REDEMPTION_MIN_GIFT_CARD_USD=1.00
REDEMPTION_MIN_BANK_USD=10.00
REDEMPTION_MIN_UPI_USD=5.00

# CORS — comma-separated origins; use specific origins in production
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
